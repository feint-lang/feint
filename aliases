# build
alias b="cargo build"
alias br="cargo build --release"

# test
alias t='cargo test --'

# lint
function lint
    cargo clippy -- \
        -A clippy::module_inception \
        -A clippy::new_without_default
end

alias lint-out='lint 2>lint.out'
alias lint-all='cargo clippy --'

# run
alias r="cargo run --"
alias c="cargo run -- -c"
alias d="cargo run -- --dis --debug"

# run release binary
alias f="./target/release/feint"
alias bf="cargo build --release && ./target/release/feint"

# profile
alias p="cargo flamegraph --root --"

# run each example and show its exit code
function e
    cargo build
    for f in examples/*.fi
        echo -n "> $f";
        ./target/debug/feint "$f" 1>/dev/null
        echo -- " -> $status"
    end
end
